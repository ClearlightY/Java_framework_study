<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.clearlight.dao.BookMapper">
    <insert id="addBook" parameterType="top.clearlight.pojo.Books">
        insert into ssmbuild.books (bookName, bookCounts, detail)
        values (#{bookName}, #{bookCounts}, #{detail});
    </insert>

    <delete id="deleteBookById" parameterType="int">
        delete
        from ssmbuild.books
        where bookID = #{bookId}
    </delete>

    <update id="updateBook" parameterType="top.clearlight.pojo.Books">
        update ssmbuild.books
        set bookName=#{bookName},
            bookCounts=#{bookCounts},
            detail=#{detail}
        where bookID = #{bookID};
    </update>

    <select id="queryBookByName" parameterType="String" resultType="top.clearlight.pojo.Books">
        select *
        from ssmbuild.books
        where bookName = #{bookName};
    </select>

    <select id="queryAllBook" resultType="top.clearlight.pojo.Books" parameterType="List">
        select *
        from ssmbuild.books
    </select>

</mapper>
